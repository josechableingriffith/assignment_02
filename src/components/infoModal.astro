---
import { getSupabaseServer } from "../lib/supabaseServer";

const supabase = getSupabaseServer(Astro);

const { data: { user } } = await supabase.auth.getUser();

const { data: profile, error } = await supabase
    .from('users_data')
    .select('*')
    .eq('id', user.id)
    .single();

---

<!-- drawer component -->
<div id="drawer-example" class="fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-neutral-primary-soft w-96 dark:bg-gray-700" tabindex="-1" aria-labelledby="drawer-label">
    <div class="border-b border-default pb-4 mb-5 flex items-center">
        <h5 id="drawer-label" class="inline-flex items-center text-lg font-medium text-body text-gray">
            <svg class="w-5 h-5 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11h2v5m-2 0h4m-2.592-8.5h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
            Update your details
        </h5>
        <button type="button" data-drawer-hide="drawer-example" aria-controls="drawer-example" class="text-body bg-transparent hover:text-heading hover:bg-neutral-tertiary rounded-base w-9 h-9 absolute top-2.5 end-2.5 flex items-center justify-center">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6"/></svg>
            <span class="sr-only">Close menu</span>
        </button>
    </div>
    <div class=" items-center gap-4">
        <img class="rounded w-30 h-30 object-cover" src={profile?.profile_photo ?? "/profile-photo.webp"} alt="image description">

        <form class="mb-6 space-y-4" action="/api/auth/update" method="post"  enctype="multipart/form-data">   
            <div class="relative pt-5">
                <label for="profile_photo" class="block mb-2.5 text-sm font-medium text-white">Profile photo</label>
                <input  accept="image/*" id="profile_photo" name="profile_photo" class="cursor-pointer bg-gray-500 text-white text-sm rounded-base focus:ring-emerald focus:border-emerald block w-full shadow-xs placeholder:text-body" type="file">
            </div>
            <div class="relative">
                <label for="name" class="block mb-2.5 text-sm font-medium text-white">Name</label>
                <input type="text" name="name" id="name" class="dark:bg-gray-500 text-white block w-full ps-3.5 pe-3 py-2.5 text-sm rounded-base focus:ring-emerald-700 focus:border-emerald-700 px-3 py-2.5 shadow-xs placeholder:text-gray-300" value={profile.name} required>
            </div>
            <div class="relative">
                <label for="last_name" class="block mb-2.5 text-sm font-medium text-white">Last Name</label>
                <input type="text" id="last_name" name="last_name" class="dark:bg-gray-500 text-white block w-full ps-3.5 pe-3 py-2.5 text-sm rounded-base focus:ring-emerald-700 focus:border-emerald-700 px-3 py-2.5 shadow-xs placeholder:text-gray-300" value={profile.last_name} required>
            </div>
            <div class="relative">
                <label for="email" class="block mb-2.5 text-sm font-medium text-white">Email</label>
                <input type="email" id="email" name="email" class="dark:bg-gray-500 text-white block w-full ps-3.5 pe-3 py-2.5 text-sm rounded-base focus:ring-emerald-700 focus:border-emerald-700 px-3 py-2.5 shadow-xs placeholder:text-gray-300" value={user.email} required>
            </div>
            <div class="relative">
                <label for="password" class="block mb-2.5 text-sm font-medium text-white">Password</label>
                <input type="password" id="password" name="password" class="dark:bg-gray-500 text-white block w-full ps-3.5 pe-3 py-2.5 text-sm rounded-base focus:ring-emerald-700 focus:border-emerald-700 px-3 py-2.5 shadow-xs placeholder:text-gray-300" placeholder="************" >
            </div>
            <button type="submit" class="w-full text-white bg-emerald-700 box-border border border-transparent hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-700 shadow-xs font-medium leading-5 rounded-base text-sm px-4 mt-5 py-2.5 focus:outline-none">Update</button>
        </form>
    </div>
</div>

