---
const response = await fetch("https://devsapihub.com/api-movies");
const movies = await response.json();
const movieRecomendation = movies[Math.floor(Math.random() * movies.length)];

import { marked } from "marked";

const s = marked.parse('<span><svg class="w-7 h-7 text-fg-yellow flex flex-row" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M13.849 4.22c-.684-1.626-3.014-1.626-3.698 0L8.397 8.387l-4.552.361c-1.775.14-2.495 2.331-1.142 3.477l3.468 2.937-1.06 4.392c-.413 1.713 1.472 3.067 2.992 2.149L12 19.35l3.897 2.354c1.52.918 3.405-.436 2.992-2.15l-1.06-4.39 3.468-2.938c1.353-1.146.633-3.336-1.142-3.477l-4.552-.36-1.754-4.17Z"/></svg></span>')

---

<section class="bg-white px-4 py-4 antialiased dark:bg-gray-900 bg-gray-900 md:py-8">
    <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Not sure what to watch?</h2>
          <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400"> Discover one of the films that ranks among our users' top recommendations.</p>
      </div> 
  <div class="mx-auto max-w-250 rounded-lg  md:p-10">
    <div class="lg:grid lg:grid-cols-2">
        <div class="shrink-0 max-w-md lg:max-w-lg mx-auto">
          <img class="w-70 hidden dark:block" src={movieRecomendation.image_url} alt="" />
        </div>
        <div class=" flex mt-6 sm:mt-8 lg:mt-0 flex-col justify-center">
          <h1 class="text-5xl font-semibold text-gray-900 sm:text-5xl dark:text-white pb-5">{movieRecomendation.title}</h1>
          <div class="mt-4 sm:items-center sm:gap-4 sm:flex">
            <p class="text-2xl font-extrabold text-gray-900 sm:text-3xl dark:text-white pb-8"><span class="text-gray">Released: </span>
              {movieRecomendation.year}
            </p>
          </div>
          <div class="flex items-center gap-2 mt-2 sm:mt-0">
              <div class="flex items-center gap-1">
                {Array.from({ length: movieRecomendation.stars }).map(() => (
                  <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M13.849 4.22c-.684-1.626-3.014-1.626-3.698 0L8.397 8.387l-4.552.361c-1.775.14-2.495 2.331-1.142 3.477l3.468 2.937-1.06 4.392c-.413 1.713 1.472 3.067 2.992 2.149L12 19.35l3.897 2.354c1.52.918 3.405-.436 2.992-2.15l-1.06-4.39 3.468-2.938c1.353-1.146.633-3.336-1.142-3.477l-4.552-.36-1.754-4.17Z"/></svg>
                ))}
                
              </div>
              <p
                class="text-sm font-medium leading-none text-gray-500 dark:text-gray-400"
              >
                ({movieRecomendation.stars})
              </p>
            </div>

         

          <hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />

          <p class="mb-6 text-gray-500 dark:text-gray-400">
            {movieRecomendation.description}
          </p>
        </div>
      </div>
    
  </div>
</section>