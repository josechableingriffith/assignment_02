---
import { marked } from "marked";
import { getSupabaseServer } from "../lib/supabaseServer";
import Mainlayout from "./layouts/mainlayout.astro";

  const supabase = getSupabaseServer(Astro);


let { data: posts, error } = await supabase
  .from('posts')
  .select("*")
  .order("date_posted", { ascending: false })
 
if (error) {
  console.error(error.message);
}

---
<Mainlayout>
<section class="bg-white dark:bg-gray-900 pt-0">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6 pt-0">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Our Latest Reviews</h2>
          <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">Stay updated with the latest releases. Explore our community's most recent takes on the latest releases, hidden gems, and cult classics.</p>
      </div> 
      <div class="grid gap-8 lg:grid-cols-3">
          {posts.map((post) => {
            const title = marked.parse(post.title);
            const preview = marked.parse(post?.preview ?? "vacio");
            return (
                <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
                    <div class="flex justify-between items-center mb-5 text-gray-500">
                        <a href={"/blog/"+post.slug} class="w-full">
                            <img class="rounded-base h-45 w-full object-cover" src={post.cover} alt="" />
                        </a>
                    </div>
                    <a href={"/blog/"+post.slug} set:html={title} class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"></a>
                    <div class="flex justify-between items-center pt-10">
                        <div class="flex items-center space-x-4">
                            <span class="font-medium dark:text-white">
                                {"By "+ post.author_name + " " + post.author_last_name}
                            </span>
                        </div>
                        <a href={"/blog/"+post.slug} class="inline-flex items-center font-medium text-emerald-600 dark:text-emerald-500 hover:underline">
                            Read more
                            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </a>
                    </div>
                </article>  
            );
            })}                
      </div>  
      
  </div>
</section>
</Mainlayout>
